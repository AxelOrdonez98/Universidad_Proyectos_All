<div class="jumbotron mt-4 center">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Pasajero</h3>
        </div>
        <div class="card-body">
            <form action="/pasajero/nuevo-pasajero" method="POST">
                <h3>Datos Personales</h3>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Nombre(s)</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu(s) nombre(s)" name="nombre"
                        autofocus>
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Apellidos</label>
                    <input type="text" class="form-control" placeholder="Ingresa tus Apellidos" name="apellidos">
                </div>

                <div class="form-group">
                    <label class="col-form-label pull-left" for="inputDefault">Sexo</label>
                    <select class="custom-select" name="sexo">
                        <option selected="">Seleciona una opcion:</option>
                        <option value="1">Mujer</option>
                        <option value="2">Hombre</option>
                        <option value="3">Otro</option>
                    </select>
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Tipo de sangre</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu tipo de sangre"
                        name="sangre">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Vacunas</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu ultima vacuna" name="vacunas">
                </div>

                <div class="form-group">
                    <label class="col-form-label pull-left" for="inputDefault">Donate de organos</label>
                    <select class="custom-select" name="donante-organos">
                        <option selected="">Seleciona una opcion:</option>
                        <option value="1">Si</option>
                        <option value="2">No</option>
                    </select>
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Religion</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu religon" name="religion">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Nacionalidad</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu nacionalidad" name="nacionalidad">
                </div>

                <div class="form-group">
                    <label class="col-form-label pull-left" for="inputDefault">Estado civil actual</label>
                    <select class="custom-select" name="estado-civil">
                        <option selected="">Seleciona una opcion:</option>
                        <option value="1">Solter@</option>
                        <option value="2">Casad@</option>
                        <option value="3">Divorciad@</option>
                        <option value="4">Viud@</option>
                    </select>
                </div>

                <h3>Direccion fiscal</h3>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Pais</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu pais de recidencia" name="pais">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Ciudad</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu ciudad de recidencia" name="ciudad">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Calle</label>
                    <input type="text" class="form-control" placeholder="Ingresa la calle de tu domicilio" name="calle">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Numero de domicilio</label>
                    <input type="text" class="form-control" placeholder="Ingresa el numero exterio de tu domicilio" name="numero-domicilio">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Codigo Postal</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu codigo postal" name="codigo-postal">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Colonia</label>
                    <input type="text" class="form-control" placeholder="Ingresa tu colonia" name="colinia">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Referencia de calle 1</label>
                    <input type="text" class="form-control" placeholder="Ingresa la primera referencia" name="referencia-1">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Referencia de calle 2</label>
                    <input type="text" class="form-control" placeholder="Ingresa la segunda referencia" name="referencia-2">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Tipo de recidencia</label>
                    <input type="text" class="form-control" placeholder="Recidencia: Casa, Departamento, etc"
                        name="tipo-de-residencia">
                </div>

                <div class="form-group">
                    <label class="col-form-label pull-left" for="inputDefault">Tipo de recidencia</label>
                    <select class="custom-select" name="casa-propia-renta">
                        <option selected="">Seleciona una opcion:</option>
                        <option value="1">Casa propia</option>
                        <option value="2">Casa rentada</option>
                    </select>
                </div>

                <br>
                <h3>Datos para el vuelo</h3>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Id del vuelo</label>
                    <input type="text" class="form-control" placeholder="Ingrese id unico del vuelo" name="id-vuelo">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Numero de pasaporte</label>
                    <input type="text" class="form-control" placeholder="Ingrese el numero del pasaporte"
                        name="numero-pasaporte">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Numero de visa</label>
                    <input type="text" class="form-control" placeholder="Ingrese numero de visa" name="numero-visa">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Numero de vuelo</label>
                    <input type="text" class="form-control" placeholder="Ingrese el numero del vuelo"
                        name="numer-vuelo">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Ciudad de origen</label>
                    <input type="text" class="form-control" placeholder="Ingrese la ciudad de despegue"
                        name="ciudad-origen">
                </div>

                <div class="form-grup">
                    <label class="col-form-label pull-left" for="inputDefault">Ciudad o pais de destino</label>
                    <input type="text" class="form-control" placeholder="Ingrese la ciudad o pais de aterrizaje"
                        name="ciudad-destino">
                </div>

                <div class="form-group">
                    <label class="col-form-label pull-left" for="inputDefault">Escala</label>
                    <select class="custom-select" name="escala">
                        <option selected="">Seleciona una opcion:</option>
                        <option value="1">Si</option>
                        <option value="2">No</option>
                    </select>
                </div>

                <div class="form-grup">
                    <button class="btn btn-warning">
                        Ingresar datos
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
<footer>
    <div class="jumbotron mt-4">
        <h5>Siguenos en nuestras rede sociales!</h5>
        <button type="button" class="btn btn-outline-primary">Facebook</button>
        <button type="button" class="btn btn-outline-info">Twitter</button>
        <button type="button" class="btn btn-outline-danger">Youtube</button>
        <button type="button" class="btn btn-outline-warning">Snapchat</button>
        <button type="button" class="btn btn-outline-secondary">Instagram</button>
    </div>
</footer>